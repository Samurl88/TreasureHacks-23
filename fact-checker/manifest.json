{
  "manifest_version": 3,
  "name": "FactChecker",
  "version": "1.0",
  "description": "Fact checking on Reddit, empowered by OpenAI's ChatGPT",
  "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "content_scripts": [
    {
        "js": ["scripts/content.js"],
        "css": ["styles.css"],
        "matches": [
            "https://www.reddit.com/*"
        ]
    }
  ]
}